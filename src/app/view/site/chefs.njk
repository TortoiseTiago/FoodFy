{% extends "layout.njk" %}

{% block head %}
  <title>Chefs - FoodFy</title>
{% endblock head %}

{% block content %}

  <div class="cards fadeIn">
    <h3>Nossos Chefs</h3>
  </div>

  <div class="recipes fadeIn">
    {% for recipe in recipes %}
      <div class="recipe">
        <div>
          <div class="image">
            <img src="{{recipe.image}}" alt="{{recipe.title}}">
          </div>
        </div>

        <div class="colum_right">
          <div class="title">
            {{recipe.title}}
          </div>
          <div class="author">
            por
            {{recipe.author}}
          </div>

          <a href="/recipes/{{recipe.id}}">Visualizar</a>
        </div>
      </div>

    {% endfor %}
  </div>

{% endblock content %}