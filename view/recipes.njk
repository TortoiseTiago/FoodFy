{% extends "layout.njk" %}

{% block head %}
    <title>Receitas - FoodFy</title>
{% endblock head %}

{% block content %}
    <div class="container-cards fadeIn">
        <div class="cards">
            {% for item in items %}
                <div class="card" id="">
                    <img src="{{item.image}}" alt="{{item.title}}">
                    <h3>{{item.title}}</h3>
                    <p>{{item.author}}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock content %}